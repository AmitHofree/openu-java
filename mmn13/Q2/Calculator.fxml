<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="389.0" prefWidth="319.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CalculatorController">
   <children>
      <VBox prefHeight="398.0" prefWidth="319.0">
         <children>
            <HBox alignment="CENTER" prefHeight="90.0" prefWidth="240.0" style="-fx-background-color: #D3D3D3;">
               <children>
                  <TextField fx:id="display" editable="false" prefHeight="63.0" prefWidth="307.0">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </TextField>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="62.0" prefWidth="240.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onPress7" prefHeight="62.0" prefWidth="80.0" text="7" />
                  <Button mnemonicParsing="false" onAction="#onPress8" prefHeight="62.0" prefWidth="80.0" text="8" />
                  <Button mnemonicParsing="false" onAction="#onPress9" prefHeight="62.0" prefWidth="80.0" text="9" />
                  <Button mnemonicParsing="false" onAction="#onPressDivide" prefHeight="62.0" prefWidth="80.0" style="-fx-background-color: #FFB347; -fx-border-color: #63666A;" text="/" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="62.0" prefWidth="240.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onPress4" prefHeight="62.0" prefWidth="80.0" text="4" />
                  <Button mnemonicParsing="false" onAction="#onPress5" prefHeight="62.0" prefWidth="80.0" text="5" />
                  <Button mnemonicParsing="false" onAction="#onPress6" prefHeight="62.0" prefWidth="80.0" text="6" />
                  <Button mnemonicParsing="false" onAction="#onPressMultiply" prefHeight="62.0" prefWidth="80.0" style="-fx-background-color: #FFB347; -fx-border-color: #63666A;" text="X" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="62.0" prefWidth="240.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onPress1" prefHeight="62.0" prefWidth="80.0" text="1" />
                  <Button mnemonicParsing="false" onAction="#onPress2" prefHeight="62.0" prefWidth="80.0" text="2" />
                  <Button mnemonicParsing="false" onAction="#onPress3" prefHeight="62.0" prefWidth="80.0" text="3" />
                  <Button mnemonicParsing="false" onAction="#onPressMinus" prefHeight="62.0" prefWidth="80.0" style="-fx-background-color: #FFB347; -fx-border-color: #63666A;" text="-" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="62.0" prefWidth="240.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onPressPlusMinus" prefHeight="62.0" prefWidth="80.0" text="+/-" />
                  <Button mnemonicParsing="false" onAction="#onPress0" prefHeight="62.0" prefWidth="80.0" text="0" />
                  <Button mnemonicParsing="false" onAction="#onPressDot" prefHeight="62.0" prefWidth="80.0" text="." />
                  <Button mnemonicParsing="false" onAction="#onPressPlus" prefHeight="62.0" prefWidth="80.0" style="-fx-background-color: #FFB347; -fx-border-color: #63666A;" text="+" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#onPressEquals" prefHeight="62.0" prefWidth="319.0" style="-fx-background-color: #FFB347; -fx-border-color: #63666A;" text="=" />
         </children>
      </VBox>
   </children>
</AnchorPane>
